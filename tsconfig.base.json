{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cf/domain": ["libs/domain/src/index.ts"],
      "@cf/domain-test": ["libs/domain-test/src/index.ts"],
      "@cf/ifrastructure": ["libs/infrastructure/src/index.ts"],
      "@cf/shared": ["libs/shared/src/index.ts"],
      "@cf/web": ["libs/web/src/index.ts"],
      "@eg/angular-to-nodered-ui": ["libs/angular-to-nodered-ui/src/index.ts"],
      "@engadi-soutions/infrastructure": ["libs/infrastructure/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
